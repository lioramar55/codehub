{
  "name": "bot-engine",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/bot-engine/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/bot-engine",
        "main": "libs/bot-engine/src/index.ts",
        "tsConfig": "libs/bot-engine/tsconfig.lib.json",
        "assets": ["libs/bot-engine/*.md"],
        "format": ["cjs"],
        "generatePackageJson": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/bot-engine/jest.config.ts"
      }
    }
  }
}
